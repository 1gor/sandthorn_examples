<div class="row editing">
    <div class="col-sm-12">
        <h2>Listing Sandthorn products</h2>
         <p><%= link_to 'New product', "/sandthorn/products/new", class: "btn btn-success" %></p>
        <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th colspan="4">Stock status</th>
          </tr>
          </thead>
<tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><%= product.stock_status %></td>
             <td><%= link_to 'Show'.html_safe, "/sandthorn/product/#{product.id}", class: "btn btn-xs btn-primary" %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, "/sandthorn/product/#{product.id}/edit", class: "btn btn-xs btn-success"  %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-remove-sign"></span> Destroy'.html_safe, "/sandthorn/product/#{product.id}/destroy",
                            method: :post, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger"  %></td>
            </tr>
          <% end %>
</tbody>
        </table>

        <%= render 'log' %>
    </div>
</div>