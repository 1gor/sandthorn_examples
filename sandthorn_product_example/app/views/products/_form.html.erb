<%= form_for @product do |f| %>

  <% if @product.errors.any? %>
  <div id="error_explanation" class="alert bg-danger">
    <h3><%= pluralize(@product.errors.count, "error") %> prohibited
      this product from being saved:</h3>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="jumbotron clearfix">
    <div class="col-sm-7">

        <div class="form-group clearfix">
            <%= f.label :id, class: "col-sm-2 " %>
            <div class="col-sm-10">
                <%= @product.id %>
            </div>
        </div>
        <div class="form-group clearfix">
            <%= f.label :name, class: "col-sm-2 " %>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
            </div>
        </div>
        <div class="form-group clearfix">
            <%= f.label :price, class: "col-sm-2 " %>
            <div class="col-sm-10">
                <%= f.text_field :price, class: "form-control" %>
            </div>
        </div>

    </div>
    <div class="col-sm-5">
        <%= f.label :stock_status %>
        <div class="radio">
            <%= f.label(:stock_status_instock, "In stock") %>
            <%= f.radio_button(:stock_status, "instock", :checked => @product.stock_status == "instock") %>
        </div>
        <div class="radio">
            <%= f.label(:stock_status_outofstock, "Out of stock") %>
            <%= f.radio_button(:stock_status, "outofstock", :checked => @product.stock_status == "outofstock") %>
        </div>
        <div class="radio">
            <%= f.label(:stock_status_discontinued, "Discontinued") %>
             <%= f.radio_button(:stock_status, "discontinued", :checked => @product.stock_status == "discontinued") %>
        </div>
        <p>
    <%= f.submit(class: "btn btn-lg btn-info") %>
  </p>
    </div>
</div>



<% end %>